<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="400dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/title" />

    <ImageButton
        android:id="@+id/watch"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignTop="@+id/record"
        android:layout_toRightOf="@+id/record"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/play" />

    <ImageButton
        android:id="@+id/join"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/watch"
        android:layout_alignTop="@+id/login"
        android:layout_marginRight="12dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/enter" />

    <ImageButton
        android:id="@+id/login"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/join"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/login" />

    <ImageButton
        android:id="@+id/exit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/web"
        android:layout_toRightOf="@+id/web"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/exit" />

    <ImageButton
        android:id="@+id/downapk"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/web"
        android:layout_toLeftOf="@+id/watch"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/down" />

    <ImageButton
        android:id="@+id/record"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/login"
        android:layout_marginTop="38dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/record" />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/downapk"
        android:layout_toLeftOf="@+id/downapk"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/camera" />

    <ImageButton
        android:id="@+id/web"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/watch"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/web" />

</RelativeLayout>